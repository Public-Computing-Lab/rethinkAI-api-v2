# RethinkAI Unified Chatbot Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Gemini AI Configuration
# ============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_SUMMARY_MODEL=gemini-2.5-flash-lite

# ============================================================================
# Database Configuration
# ============================================================================
# MySQL Configuration (for structured data: 311, 911, events)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DB=rethink_ai_boston


# ============================================================================
# Vector Database Configuration
# ============================================================================
# Path to ChromaDB vector database directory
# Relative to on_the_porch/ directory
VECTORDB_DIR=../vectordb_new

# ============================================================================
# RAG Configuration
# ============================================================================
# Embedding model for vector search
GEMINI_EMBED_MODEL=models/text-embedding-004

# ============================================================================
# LangChain/LangSmith Tracing (Optional)
# ============================================================================
# Enable tracing for debugging and monitoring
LANGCHAIN_TRACING_V2=false
LANGSMITH_TRACING=false
LANGCHAIN_API_KEY=
LANGSMITH_API_KEY=
LANGCHAIN_PROJECT=rethinkai-community-sentiment
LANGSMITH_PROJECT=rethinkai-community-sentiment

