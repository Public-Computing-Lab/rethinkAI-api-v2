# Data Ingestion Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Google Drive Configuration
# ============================================================================
# Google Drive folder ID containing community documents
# To find the folder ID: Open the folder in Google Drive, the ID is in the URL
# Example: https://drive.google.com/drive/folders/FOLDER_ID_HERE
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id

# Path to Google Service Account credentials JSON file
# Download from: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_CREDENTIALS_PATH=service_account_credentials.json

# ============================================================================
# Email Configuration (Gmail OAuth 2.0)
# ============================================================================
# Email address to monitor for newsletters
NEWSLETTER_EMAIL_ADDRESS=your-email@example.com

# Gmail OAuth 2.0 credentials
# Set up OAuth app: https://console.cloud.google.com/apis/credentials
GMAIL_CREDENTIALS_PATH=gmail_credentials.json
GMAIL_TOKEN_PATH=gmail_token.json

# IMAP Configuration (if using IMAP instead of OAuth)
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# ============================================================================
# Database Configuration
# ============================================================================
# MySQL Configuration (for events and structured data)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DB=rethink_ai_boston

# PostgreSQL Configuration (optional - for vector database)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
PGSCHEMA=public

# ============================================================================
# Gemini AI Configuration
# ============================================================================
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_SUMMARY_MODEL=gemini-2.0-flash-exp

# ============================================================================
# File Paths Configuration
# ============================================================================
# Vector database directory (relative to data_ingestion/)
VECTORDB_DIR=../vectordb_new

# Temporary download directory
TEMP_DOWNLOAD_DIR=./temp_downloads

# ============================================================================
# Processing Configuration
# ============================================================================
# How many days back to look for new emails
EMAIL_LOOKBACK_DAYS=7

# Maximum number of files to process per sync run
MAX_FILES_PER_RUN=100

# Enable verbose logging
VERBOSE_LOGGING=false

# Extract articles from newsletters (in addition to events)
EXTRACT_ARTICLES=true

# Minimum article length (characters) to include
ARTICLE_MIN_LENGTH=50
