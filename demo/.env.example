# Project Demo Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Gemini AI Configuration
# ============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_SUMMARY_MODEL=gemini-2.5-flash-lite

# ============================================================================
# Database Configuration (Demo - Docker MySQL)
# ============================================================================
# Matches demo/docker-compose.demo.yml
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=demo_user
MYSQL_PASSWORD=demo_pass
MYSQL_DB=sentiment_demo

# ============================================================================
# Vector Database Configuration
# ============================================================================
# Path to ChromaDB vector database directory (relative to main_chat/)
VECTORDB_DIR=../vectordb_new

# ============================================================================
# RAG / Embeddings
# ============================================================================
GEMINI_EMBED_MODEL=models/text-embedding-004

RETHINKAI_API_KEYS=banana