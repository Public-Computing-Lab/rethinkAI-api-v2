# RethinkAI API v2.0 Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=127.0.0.1
API_PORT=8888

# API Authentication Keys (comma-separated list)
# Client apps must include one of these keys in the "RethinkAI-API-Key" header
RETHINKAI_API_KEYS=your-api-key-1,your-api-key-2

# Flask Session Configuration
FLASK_SECRET_KEY=your-secret-key-change-this-in-production
FLASK_SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS

# ============================================================================
# Database Configuration (MySQL)
# ============================================================================
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DB=rethink_ai_boston

# ============================================================================
# Gemini AI Configuration
# ============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_SUMMARY_MODEL=gemini-2.5-flash-lite

# ============================================================================
# Mapbox Configuration (Optional - for geospatial features)
# ============================================================================
MAPBOX_TOKEN=your-mapbox-access-token

# ============================================================================
# Legacy API Configuration (for api.py - deprecated)
# ============================================================================
# These are only needed if using the legacy api.py
DB_HOST=127.0.0.1
DB_USER=root
DB_PASSWORD=your-mysql-password
DB_NAME=rethink_ai_boston
DATASTORE_PATH=./datastore
PROMPTS_PATH=./prompts
VITE_BASE_URL=http://localhost:8888

